<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="12dp">

    <TextView
        style="@style/TextAppearance.Aptoide.Balloon"
        android:text="@string/balloon_security_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/balloon_security_subtitle_start_part"
            tools:text="We have checked Medium Very Big Name"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="160dp"
            style="@style/TextAppearance.Aptoide.Balloon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toEndOf="@id/balloon_security_subtitle_start_part"
            android:layout_toRightOf="@id/balloon_security_subtitle_start_part"
            android:id="@+id/balloon_security_subtitle_final_part"
            style="@style/TextAppearance.Aptoide.Balloon"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/balloon_security_subtitle_final_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_avg"
            tools:ignore="contentDescription"/>

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_passed"
            tools:ignore="contentDescription"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_avast"
            tools:ignore="contentDescription"/>

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_passed"
            tools:ignore="contentDescription"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_norton"
            tools:ignore="contentDescription"/>

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_passed"
            tools:ignore="contentDescription"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_mcafee"
            tools:ignore="contentDescription"/>

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_passed"
            tools:ignore="contentDescription"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/balloon_security_google_play"
        style="@style/TextAppearance.Aptoide.Balloon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_google_play"
        android:drawablePadding="12dp"
        android:drawableRight="@drawable/ic_google_play"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="@string/balloon_security_google_play"
        android:visibility="gone"
        tools:visibility="visible"/>


</LinearLayout>
